{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "EnableFileSink": false,
    "EnableSeqSink": true
  },
  "Seq": {
    "ServerUrl": "http://localhost:5341",
    "ApiKey": ""
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=vendas.db"
  },
  "Services": {
    "CRM": {
      "BaseUrl": "https://crm-api.example.com",
      "TimeoutSeconds": 30
    },
    "Estoque": {
      "BaseUrl": "https://estoque-api.example.com",
      "TimeoutSeconds": 30
    }
  },
  "OutboxProcessor": {
    "ProcessingIntervalSeconds": 10,
    "ErrorDelaySeconds": 30,
    "BatchSize": 50
  },
  "RetryStrategy": {
    "MaxRetries": 5,
    "InitialDelayMs": 50
  }
}
